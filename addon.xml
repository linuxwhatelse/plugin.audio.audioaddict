<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.audioaddict"
       name="AudioAddict"
       version="0.0.0"
       provider-name="linuxwhatelse">

    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.requests" version="2.18.4.1"/>
        <import addon="script.module.dateutil" version="2.7.3"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />

    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
        <forum></forum>
        <source>https://github.com/linuxwhatelse/plugin.audio.audioaddict</source>
        <website>https://github.com/linuxwhatelse/plugin.audio.audioaddict</website>
        <email>info@linuxwhatelse.de</email>
        <summary lang="en_GB">The Internet Radio Platform.</summary>
        <description lang="en_GB">
Brands powered by AudioAddict's solutions:
  - Digitally Imported (https://di.fm)
  - RadioTunes (https://radiotunes.com)
  - JAZZRADIO.com (https://jazzradio.com)
  - ROCKRADIO.com (https://rockradio.com)
  - ClassicalRadio.com (https://classicalradio.com)

A premium subscription is required!
        </description>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
